<div class = 'container'>
    <%= form_for @personal_message do |f| %>
      <div class="form-group">
        <%= f.select :user_id, @users.collect { |user| [user.name, user.id] }, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.text_area :body, rows: 6, placeholder: "Write your message...", class: 'form-control' %>
      </div>
      <%= f.submit 'Submit', class: 'btn btn-primary' %>
    <% end %>
</div>