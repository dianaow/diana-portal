<div class="container-fluid">
  <div class ="devise-form">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <h1>Please sign in</h1>
    
    <div class="form-group row">
      <%= f.text_field :login, placeholder: "Username or email", class: "form-control", autofocus: true %>
    </div>
    
    <div class="form-group row">
      <%= f.password_field :password, placeholder: "Password", class: "form-control", autocomplete: "off" %>
    </div>
    
    <div class="form-group row">
      <%= f.submit "Log in", class: 'btn btn-md btn-devise signin' %>
    </div>
    
    <% if devise_mapping.rememberable? -%>
      <div class="form-group row"> 
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
    
    <div class = "form-group row">
      <div class="auth-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>

    <% end %>
  
  </div>
</div>


