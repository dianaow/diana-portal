<div class="container-fluid">
  <div class ="devise-form">
    
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <h1>Profile</h1>
    
    <div class="form-group row">
      <div class="control-label col-sm-3">
        <%= f.label :email %>
     </div>
      <div class="col-sm-9">
       <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
      </div>
    </div>
    
    <div class="form-group row">
      <div class="control-label col-sm-3">
        <%= f.label :name %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :name, class: "form-control", placeholder: "Enter name"%>
      </div>
    </div>
    
    <div class="form-group row">
      <div class="control-label col-sm-3">
        <%= f.label :password %>
      </div>
      <div class="col-sm-9">
        <% if @minimum_password_length %>
        <em><small>(<%= @minimum_password_length %> characters minimum)</small></em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
    </div>
    
    <div class="form-group row">
      <div class="control-label col-sm-3">
        <%= f.label :current_password %>
      </div>
      <div class="col-sm-9">
        <em><small>(we need your current password to confirm your changes)</small></em>
        <%= f.text_field :current_password, class: "form-control", autocomplete: "off" %>
      </div>
    </div>
  
    <div class="form-group row">
      <div class="col-sm-offset-3 col-sm-9">
        <%= f.submit "Save", class: 'btn btn-md btn-devise save' %>
      </div>
    </div>
    
    <div class="row form-links">
      <div class="col-sm-offset-3 col-sm-9">
        <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %> |
        <%= link_to "Back", :back %>
      </div>
    </div>
    
    <% end %>

</div>