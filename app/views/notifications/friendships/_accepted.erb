<div class="row margin-2"> 
  <div class="col-md-1">
        <% if notification.read_at? == true %>
          <i class="glyphicon glyphicon-user icon-read"></i> 
        <% else %>
          <i class="glyphicon glyphicon-user icon-unread"></i> 
        <% end %>
  </div>
  <div class="col-md-9">
    <%= link_to user_path(notification.actor_id, anchor: dom_id(notification.notifiable)), class: "dropdown-item #{"unread" if !notification.read_at?}" do %>
      <%= notification.actor.name %>
    <% end %>
    has <%= notification.action %> your follow request
  </div>
  <div class="col-md-2">
    <small><%= distance_of_time_in_words(notification.created_at, Time.now) %></small>
  </div>
</div>
<hr>