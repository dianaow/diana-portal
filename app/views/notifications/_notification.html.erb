<div class = "row" data-notification-id= "<%= notification.id %>">
  <div class= "col-xs-10 col-md-10">
      <% if notification.notifiable_type == "Comment" %>
        <%= link_to article_path(notification.notifiable.article) do %>
          <li><%= notification.actor.name %> <%= notification.action %> a <%= notification.notifiable_type %> on <%= notification.notifiable.article.title %></li> 
        <% end %>
      <% elsif notification.notifiable_type == "Friendship" && notification.action == "requested" %>
        <%= link_to user_path(notification.actor) do %> 
          <li><%= notification.actor.name %> has <%= notification.action %> to follow you</li>
        <% end %>
      <% elsif notification.notifiable_type == "Friendship" && notification.action == "accepted" %>
        <%= link_to user_path(notification.actor) do %>
          <li><%= notification.actor.name %> has <%= notification.action %> your follow request</li> 
        <% end %>
      <% end %>
  </div>
  <div class= "col-xs-2 col-md-2">  
    <%= link_to notification, method: :delete, remote: true, class: 'delete_notification' do %>
      <span class="glyphicon glyphicon-remove"></span>
    <% end %>
  </div>
</div>
