<div class="row recommended-user" data-id="<%= user.id %>">
    <div class = "col-md-2 col-sm-2 col-xs-2">
      <%= gravatar_for(user, size: 30) %>
    </div>
    <div class = "col-md-7 col-sm-7 col-xs-7">
      <b><%= link_to user.name, user_path(user) %></b><br>
    </div>
    <div class = "col-md-3 col-sm-3 col-xs-3">
      <% if current_user.active_friends.include?(user) == false  %>
        <%= link_to follow_recommended_path(friend_id: user.id), method: :get, remote: true, class: "btn btn-sm btn-success" do %>
            <i class="fa fa-plus" aria-hidden="true"></i>
        <% end %>
      <% end %>
    </div>
  </div>
  
  