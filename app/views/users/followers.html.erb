<div class = "container">
  <div class = "row">
    <div class = "col-md-9 padding-top-20">

      <div id="tabs">   
        <ul class="nav nav-tabs">
          <li role="presentation" data-toggle="tab" ><a href="#tab1">Followers</a></li>
          <li role="presentation" class="active" data-toggle="tab"><a href="#tab2">Pending</a></li>
        </ul>
        <div class="tab-content">
          <div class="tab-pane followers" id="tab1">
            <%= render 'users/followers_list', followers: @followers %>
          </div>
          <div class="tab-pane active pending-requests" id="tab2">
            <%= render 'users/pending_list', requested_friendships: @requested_friendships %>
          </div>
        </div>
      </div> 
      
    </div>
    <div class = "col-md-3"></div>
  </div>
</div>

<script>
$(document).ready(function(){
    $(".nav-tabs a").click(function(){
        $(this).tab('show');
    });
});
</script>