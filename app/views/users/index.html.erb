<div class = "container">
  <%= form_tag(users_path, :method => 'get', :id => "users_search", remote: true) do %>
    <div class = " row padding-top-20">
      <div class = "col-md-10 col-xs-10">
        <div class = "form-group">
          <%= text_field_tag :search, params[:search], placeholder: "Enter a username or email address to follow", class: "form-control" %>
        </div>
      </div>
      <div class = "col-md-2 col-xs-2">
        <div class = "form-group">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </div>
    </div>
    <div id="users">
      <%= render @users %>
    </div>
  <% end %>
</div>