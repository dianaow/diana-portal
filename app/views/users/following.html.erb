<div class = "container" id="following">
  <h3>You are following <%= pluralize(@following.count, 'person') %></h3>
  <% @following.each do |follow| %>
    <div class="row alternate-row" id ="following_<%= follow.id %>">
      <div class = "col-md-1 col-sm-2 col-xs-3">
        <%= gravatar_for(follow, size: 45) %>
      </div>
      <div class = "col-md-9 col-sm-6 col-xs-4">
        <b><%= link_to follow.name, user_path(follow) %></b><br>
      </div>
      <div class = "col-md-2 col-sm-4 col-xs-5 status_buttons">
        <%= link_to friendship_path(current_user.friendships.find_by_friend_id(follow.id)), :method => :delete,
          data: { confirm: "Are you sure?" }, class:"btn btn-unfollow", remote: true do %>
          <i class="fa fa-minus" aria-hidden="true"></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>